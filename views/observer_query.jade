extends layout

block content
  h1= title
  p Welcome to #{title}
  
  form#flickrSearch
    input#query(type="text" name="tag")
    input(type="submit" name="submit" value="submit")

  div#lastQuery

  ol#searchResults
 
  script#resultTemplate(type='template').
    each item in items
      li
        img(src=item.media.m)
 
  script(src="http://ajax.useso.com/ajax/libs/jquery/1.8.0/jquery.min.js")
  script(src="http://cdn.bootcss.com/jade/1.11.0/jade.min.js")
  script(src="/static/javascripts/pubsubz.js")
  script(src="/static/javascripts/observer.js")

